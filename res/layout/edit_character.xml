<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:columnCount="2"
            android:id="@+id/characterGrid">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:id="@+id/textView" android:layout_row="0" android:layout_column="0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name" android:layout_row="0" android:layout_column="1" android:inputType="textCapWords"
            android:layout_gravity="left|right"/>
</GridLayout>